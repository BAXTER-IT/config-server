		<appender-ref ref="ASYNC_CurrenexAP"/>
	</logger>
	<logger name="com.baxter.genius.publishing.FIXClientMessaging" additivity="false">
		<level value="TRACE"/>
		<appender-ref ref="ASYNC_FIX"/>
	</logger>
	<logger name="com.baxter.genius.publishing.BloombergClientMessaging" additivity="false">
		<level value="TRACE"/>
		<appender-ref ref="ASYNC_Bloomberg"/>
	</logger>
	<logger name="com.baxter.genius.publishing.EBSXMLClientMessaging">
		<level value="TRACE"/>
	</logger>
	<logger name="com.baxter.genius.publishing.SimpleClientMessaging">
		<level value="TRACE"/>
	</logger>
	<logger name="com.baxter.genius.publishing.HotSpotClientMessaging">
		<level value="TRACE"/>
	</logger>
	<logger name="com.baxter.genius.publishing.FXConnectClientMessaging">
		<level value="TRACE"/>
	</logger>
	<logger name="com.baxter.genius.publishing.EBSClientMessaging">
		<level value="TRACE"/>
	</logger>
	<logger name="com.baxter.genius.publishing.HedgeClientMessaging">
		<level value="TRACE"/>
	</logger>
	<logger name="com.baxter.genius.publishing.IntegralClientMessaging" additivity="false">
		<level value="TRACE"/>
		<appender-ref ref="ASYNC_Integral"/>
	</logger>
	<logger name="com.baxter.genius.publishing.JMSClientMessaging">
		<level value="TRACE"/>
	</logger>
	<logger name="com.baxter.genius.publishing.MDPIFXAllClientMessaging">
		<level value="TRACE"/>
	</logger>
	<logger name="com.baxter.genius.publishing.FIX44MessageCracker" additivity="false">
		<level value="TRACE"/>
		<appender-ref ref="ASYNC_FIX44"/>
	</logger>
	<logger name="com.baxter.genius.publishing.BloombergMessageHandler" additivity="false">
		<level value="TRACE"/>
		<appender-ref ref="ASYNC_Bloomberg"/>
	</logger>
	<logger name="com.baxter.genius.publishing.ForwardCurrenciesHandler">
		<level value="TRACE"/>
	</logger>
	<logger name="com.baxter.pe.management.StatisticExposer">
		<level value="TRACE"/>
	</logger>

	<logger name="com.baxter" additivity="false">
		<level value="TRACE"/>
		<appender-ref ref="ASYNC_BroadcastBase"/>
	</logger>

	<logger name="com.ssgm.glml.integration.sonic.SonicLoginSpiImpl" additivity="false">
		<level value="TRACE"/>
		<appender-ref ref="ASYNC_SonicLoginSpiImpl"/>
	</logger>

	<logger name="org.jboss" additivity="false">
		<level value="TRACE"/>
		<appender-ref ref="ASYNC_JBossMQ"/>
	</logger>

	<logger name="org.jnp" additivity="false">
		<level value="TRACE"/>
		<appender-ref ref="ASYNC_JNP"/>
	</logger>

	<logger name="quickfix.mina" additivity="false">
		<level value="TRACE"/>
		<appender-ref ref="ASYNC_FIX44"/>
	</logger>

	<logger name="fxi.api" additivity="false">
		<level value="DEBUG"/>
		<appender-ref ref="ASYNC_CurrenexAP"/>
	</logger>

	<category name="java">
		<level value="WARN"/>
	</category>
	
	<root>
		<level value="INFO"/>
		<appender-ref ref="CONSOLE"/>
	</root>


</log4j:configuration>
