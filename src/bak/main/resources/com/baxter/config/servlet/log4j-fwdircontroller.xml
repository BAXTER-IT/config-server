<?xml version="1.0" encoding="UTF-8"?>
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" >
    <appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
        <param name="Target" value="System.out"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%c{1} [%d{ISO8601}] %m%n" />
        </layout>
    </appender>
	
	<appender name="FILE_FwdIRControllerUSD" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="${logs.dir}/FwdIRControllerUSD.log" />
		<param name="MaxFileSize" value="50MB" />
		<param name="MaxBackupIndex" value="10" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="FwdIRControllerUSD[%d{ISO8601}][%p] - %m%n" />
		</layout>
	</appender>
	
	
	<logger name="com.baxter">
        <level value="INFO"/>
		<appender-ref ref="CONSOLE" />
    </logger>
    
	<logger name="FwdControllerUSD" additivity="false">
		<level value="TRACE" />
		<appender-ref ref="FILE_FwdIRControllerUSD" />
	</logger>
    
</log4j:configuration>