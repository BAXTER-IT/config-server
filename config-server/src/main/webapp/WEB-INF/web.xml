<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
    version="2.5">

    <display-name>Baxter Configuration Web Application</display-name>

    <!--
    <context-param>
        <param-name>com.baxter.config.Repository</param-name>
        <param-value>~/.baxter-config</param-value>
    </context-param>
    -->

    <servlet>
        <servlet-name>RestfulServlet</servlet-name>
        <servlet-class>com.baxter.config.servlet.RestfulServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>RestfulServlet</servlet-name>
        <url-pattern>/rest/*</url-pattern>
    </servlet-mapping>

</web-app>
