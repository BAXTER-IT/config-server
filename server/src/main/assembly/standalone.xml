<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

	<id>standalone</id>

	<formats>
		<format>tar.gz</format>
	</formats>

	<includeBaseDirectory>false</includeBaseDirectory>

	<files>
		<file>
			<outputDirectory>log</outputDirectory>
			<source>src/etc/README.TXT</source>
		</file>
		<file>
			<outputDirectory>repository</outputDirectory>
			<source>src/etc/README.TXT</source>
		</file>
		<file>
			<outputDirectory>processors</outputDirectory>
			<source>src/etc/README.TXT</source>
		</file>
		<file>
			<outputDirectory>etc</outputDirectory>
			<source>src/main/resources/server.properties</source>
			<destName>configuration-server</destName>
			<fileMode>0664</fileMode>
		</file>
		<file>
			<outputDirectory>etc</outputDirectory>
			<source>src/main/resources/logback.xml</source>
			<destName>configuration-server-log-logback.xml</destName>
			<fileMode>0664</fileMode>
		</file>
		<file>
			<outputDirectory>etc</outputDirectory>
			<source>src/main/resources/log4j.xml</source>
			<destName>configuration-server-log-log4j.xml</destName>
			<fileMode>0664</fileMode>
		</file>
		<file>
			<outputDirectory>bin</outputDirectory>
			<source>src/main/scripts/start-configuration-server-standalone.sh</source>
			<destName>start-configuration-server</destName>
			<filtered>true</filtered>
			<lineEnding>unix</lineEnding>
			<fileMode>0555</fileMode>
		</file>
		<file>
			<outputDirectory>bin</outputDirectory>
			<source>src/main/scripts/start-configuration-server.cmd</source>
			<destName>start-configuration-server.cmd</destName>
			<filtered>true</filtered>
			<lineEnding>windows</lineEnding>
			<fileMode>0755</fileMode>
		</file>
		<file>
			<outputDirectory>bin</outputDirectory>
			<source>src/main/scripts/wrapper/standalone.sh</source>
			<destName>configuration-server</destName>
			<filtered>true</filtered>
			<lineEnding>unix</lineEnding>
			<fileMode>0555</fileMode>
		</file>
	</files>

	<dependencySets>
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
			<useProjectArtifact>true</useProjectArtifact>
		</dependencySet>
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
			<useProjectArtifact>false</useProjectArtifact>
			<scope>runtime</scope>
			<useTransitiveDependencies>true</useTransitiveDependencies>
		</dependencySet>
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
			<useProjectArtifact>false</useProjectArtifact>
			<scope>provided</scope>
			<useTransitiveDependencies>true</useTransitiveDependencies>
			<includes>
				<include>commons*:commons*</include>
			</includes>
		</dependencySet>
	</dependencySets>

</assembly>
