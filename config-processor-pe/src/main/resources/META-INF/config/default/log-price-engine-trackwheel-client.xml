<?xml version="1.0" encoding="UTF-8"?>
<configuration xmlns="http://baxter-it.com/config/log">

    <console-appender name="CONSOLE">
        <layout>TrackwheelClient %c{1} [%d{ISO8601}] %m%n</layout>
    </console-appender>
   
    <rolling-file-appender name="FILE_TWClient" file="TrackwheelClient.log" maxSize="50MB" backupIndex="10">
        <layout>TrackwheelClient[%d{ISO8601}][%p] - %m%n</layout>
    </rolling-file-appender>

    <logger name="com.baxter" level="TRACE">
        <appender-ref ref="CONSOLE" />
    </logger>

    <logger name="com.baxter" level="TRACE" additivity="false">
        <appender-ref ref="FILE_TWClient" />
    </logger>
    
</configuration>
