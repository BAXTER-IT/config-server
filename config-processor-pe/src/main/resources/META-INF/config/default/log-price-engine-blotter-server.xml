<?xml version="1.0" encoding="UTF-8"?>
<configuration xmlns="http://baxter-it.com/config/log">

    <console-appender name="CONSOLE">
        <layout>[%C]%c{1} [%d{ISO8601}] %m%n</layout>
    </console-appender>
   
    <rolling-file-appender name="FILE_BlotterServer" file="BlotterServer.log" maxSize="5MB" backupIndex="10">
        <layout>BlotterServer[%d{ISO8601}][%p] - %m%n</layout>
    </rolling-file-appender>

    <rolling-file-appender name="FILE_BlotterServer_AbosConnection" file="BlotterServer.log" maxSize="5MB" backupIndex="10">
        <layout>AbosConnection[%d{ISO8601}][%p] - %m%n</layout>
    </rolling-file-appender>

    <rolling-file-appender name="FILE_BlotterServer_PositionServer" file="BlotterServer.log" maxSize="100MB" backupIndex="5">
        <layout>%X{HDR}[%d{ISO8601}][%p] - %m%n</layout>
    </rolling-file-appender>

    <rolling-file-appender name="FILE_MMMPricesToDB" file="MMMPricesToDB.log" maxSize="100MB" backupIndex="5">
        <layout>MMMPricesToDB[%d{ISO8601}][%p] - %m%n</layout>
    </rolling-file-appender>

    <rolling-file-appender name="FILE_DIServer" file="DIServer.log" maxSize="100MB" backupIndex="5">
        <layout>DIServer[%d{ISO8601}][%p] - %m%n</layout>
    </rolling-file-appender>

    <logger name="com.baxter.genius.BlotterServer" additivity="false" level="TRACE">
        <appender-ref ref="FILE_BlotterServer" />
    </logger>

    <logger name="com.baxter.genius.positionmanager.AbosConnection" additivity="false" level="TRACE">
        <appender-ref ref="FILE_BlotterServer_AbosConnection" />
    </logger>

    <logger name="org.jnp" additivity="false" level="TRACE">
        <appender-ref ref="FILE_BlotterServer_AbosConnection" />
    </logger>

    <logger name="com.baxter.genius.positionmanager.PositionManager" additivity="false" level="TRACE">
        <appender-ref ref="FILE_BlotterServer_PositionServer" />
    </logger>

    <logger name="com.baxter.genius.positionmanager.InstitutionalPortfolio" additivity="false" level="TRACE">
        <appender-ref ref="FILE_BlotterServer_PositionServer" />
    </logger>

    <logger name="com.baxter.genius.positionmanager.MasterAccountPortfolio" additivity="false" level="TRACE">
        <appender-ref ref="FILE_BlotterServer_PositionServer" />
    </logger>

    <logger name="com.baxter.genius.positionmanager.RetailBucketingPortfolio" additivity="false" level="TRACE">
        <appender-ref ref="FILE_BlotterServer_PositionServer" />
    </logger>

    <logger name="com.baxter.genius.mmm" additivity="false" level="TRACE">
        <appender-ref ref="FILE_MMMPricesToDB" />
    </logger>      

    <logger name="com.baxter.pe.di.server" additivity="false" level="TRACE">
        <appender-ref ref="FILE_DIServer" />
    </logger>  

    <logger name="com.baxter" level="TRACE">
        <appender-ref ref="CONSOLE" />
    </logger>
    
</configuration>
