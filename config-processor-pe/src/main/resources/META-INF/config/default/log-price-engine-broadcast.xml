	<logger name="com.baxter.genius.publishing.IntegralClientMessaging" additivity="false" level="TRACE">
		<appender-ref ref="ASYNC_Integral" />
	</logger>
	<logger name="com.baxter.genius.publishing.JMSClientMessaging" level="TRACE" />
	<logger name="com.baxter.genius.publishing.MDPIFXAllClientMessaging" level="TRACE" />
