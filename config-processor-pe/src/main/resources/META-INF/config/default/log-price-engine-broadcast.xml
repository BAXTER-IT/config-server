	</logger>
	<logger name="com.baxter.genius.publishing.ForwardCurrenciesHandler" level="TRACE" />
	<logger name="com.baxter.pe.management.StatisticExposer" level="TRACE" />
	<logger name="com.baxter" additivity="false" level="TRACE">
		<appender-ref ref="ASYNC_BroadcastBase" />
	</logger>
 
	<logger name="com.ssgm.glml.integration.sonic.SonicLoginSpiImpl" additivity="false" level="TRACE">
		<appender-ref ref="ASYNC_SonicLoginSpiImpl" />
	</logger>

	<logger name="org.jboss" additivity="false" level="TRACE">
		<appender-ref ref="ASYNC_JBossMQ" />
	</logger>

	<logger name="org.jnp" additivity="false" level="TRACE">
		<appender-ref ref="ASYNC_JNP" />
	</logger>
	
	<logger name="quickfix.mina" additivity="false" level="TRACE">
		<appender-ref ref="ASYNC_FIX44" />
	</logger>
	
	<logger name="fxi.api" additivity="false" level="DEBUG">
		<appender-ref ref="ASYNC_CurrenexAP" />
	</logger>
	<logger name="com.baxter.genius.PricesTable" level="TRACE">
		<appender-ref ref="ASYNC_BroadcastBase" />
	</logger>
	<logger name="com.baxter.genius.publishing.NSVEngine" additivity="false" level="TRACE">
		<appender-ref ref="ASYNC_BroadcastBase" />
	</logger>
    
</configuration>
