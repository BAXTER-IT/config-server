<?xml version="1.0" encoding="UTF-8"?>
<configuration xmlns="http://baxter-it.com/config/log">

    <console-appender name="CONSOLE">
        <layout>BroadcastBase [%C]%c [%d{ISO8601}] %m%n</layout>
    </console-appender>
   
    <rolling-file-appender name="ASYNC_BroadcastBase" file="BroadcastBase.log" maxSize="5MB" backupIndex="10">
        <layout>%c[%d{ISO8601}][%p] - %m%n</layout>
    </rolling-file-appender>

    <rolling-file-appender name="ASYNC_PricesTable" file="BroadcastBase.log" maxSize="5MB" backupIndex="10">
        <layout>%c[%d{ISO8601}][%p] - %m%n</layout>
    </rolling-file-appender>

    <rolling-file-appender name="ASYNC_Bloomberg" file="Bloomberg_messages.log" maxSize="100MB" backupIndex="5">
        <layout>[%d{ISO8601}] %c - %m%n</layout>
    </rolling-file-appender>

    <rolling-file-appender name="ASYNC_CurrenexAP" file="currenexap_messages.log" maxSize="100MB" backupIndex="5">
        <layout>[%d{ISO8601}] %c - %m%n</layout>
    </rolling-file-appender>

    <rolling-file-appender name="ASYNC_SonicLoginSpiImpl" file="SonicLoginSpiImpl.log" maxSize="100MB" backupIndex="5">
        <layout>[%d{ISO8601}] %c - %m%n</layout>
    </rolling-file-appender>

    <rolling-file-appender name="ASYNC_JBossMQ" file="JBossMQ.log" maxSize="100MB" backupIndex="5">
        <layout>[%d{ISO8601}] %c - %m%n</layout>
    </rolling-file-appender>

    <rolling-file-appender name="ASYNC_JNP" file="JNP.log" maxSize="100MB" backupIndex="5">
        <layout>[%d{ISO8601}] %c - %m%n</layout>
    </rolling-file-appender>

    <rolling-file-appender name="ASYNC_Integral" file="Integral_messages.log" maxSize="100MB" backupIndex="5">
        <layout>[%d{ISO8601}] %c - %m%n</layout>
    </rolling-file-appender>

    <rolling-file-appender name="ASYNC_FIX44" file="fix44_messages.log" maxSize="100MB" backupIndex="5">
        <layout>[%d{ISO8601}] %c - %m%n</layout>
    </rolling-file-appender>

    <rolling-file-appender name="ASYNC_FIX" file="fix_messages.log" maxSize="100MB" backupIndex="5">
        <layout>[%d{ISO8601}] %c - %m%n</layout>
    </rolling-file-appender>

    <rolling-file-appender name="ASYNC_Web" file="web_messages.log" maxSize="100MB" backupIndex="5">
        <layout>[%d{ISO8601}] %c - %m%n</layout>
    </rolling-file-appender>

    <rolling-file-appender name="ASYNC_NSVEngine" file="BroadcastBase.log" maxSize="100MB" backupIndex="5">
        <layout>[%d{ISO8601}] %c - %m%n</layout>
    </rolling-file-appender>



	<logger name="com.baxter.genius.publishing.BroadcastBase" level="TRACE" />
	<logger name="com.baxter.genius.publishing.BroadcastBase$ShutdownHook" level="TRACE" />
	<logger name="com.baxter.genius.publishing.FXAllClientMessaging" level="TRACE" />
	<logger name="com.baxter.genius.publishing.WebClientMessaging" additivity="false" level="TRACE">
		<appender-ref ref="ASYNC_Web" />
	</logger>
	<logger name="com.baxter.genius.publishing.FIX44ClientMessaging" additivity="false" level="TRACE">
		<appender-ref ref="ASYNC_FIX44" />
	</logger>
	<logger name="com.baxter.genius.publishing.TradeAcceptor" level="TRACE" />
	<logger name="com.baxter.genius.publishing.CurrenexClientMessaging" level="TRACE" />
	<logger name="com.baxter.genius.publishing.CurrenexAPClientMessaging" additivity="false" level="TRACE">
		<appender-ref ref="ASYNC_CurrenexAP" />
	</logger>
	<logger name="com.baxter.genius.publishing.FIXClientMessaging" additivity="false" level="TRACE">
		<appender-ref ref="ASYNC_FIX" />
	</logger>
	<logger name="com.baxter.genius.publishing.BloombergClientMessaging" additivity="false" level="TRACE">
