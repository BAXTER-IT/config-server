<?xml version="1.0" encoding="UTF-8"?>
<configuration xmlns="http://baxter-it.com/config/log">

    <console-appender name="CONSOLE">
        <layout>BlotterX %c{1} [%d{ISO8601}] %m%n</layout>
    </console-appender>
   
    <rolling-file-appender name="FILE_Blotter" file="BlotterClient.log" maxSize="5MB" backupIndex="10">
        <layout>BlotterX[%d{ISO8601}][%p] - %m%n</layout>
    </rolling-file-appender>

    <rolling-file-appender name="FILE_DealerTradingTool" file="DealerTradingTool.log" maxSize="5MB" backupIndex="10">
        <layout>TradingTool[%d{ISO8601}][%p] - %m%n</layout>
    </rolling-file-appender>

    <rolling-file-appender name="ASYNC_NSVEngine" file="BlotterClient.log" maxSize="100MB" backupIndex="5">
        <layout>[%d{ISO8601}] %c - %m%n</layout>
    </rolling-file-appender>

    <logger name="com.baxter.genius.blotterX.Blotter" additivity="false" level="TRACE">
        <appender-ref ref="FILE_Blotter" />
    </logger>

    <logger name="com.baxter.genius.blotterX.PriceDisplayX" additivity="false" level="TRACE">
        <appender-ref ref="FILE_Blotter" />
    </logger>
      
    <logger name="com.baxter.genius.dealertradingtool" additivity="false" level="TRACE">
        <appender-ref ref="FILE_DealerTradingTool" />
    </logger>
	
    <logger name="com.baxter" level="TRACE">
        <appender-ref ref="CONSOLE" />
    </logger>
    
    <logger name="com.baxter.genius.publishing.NSVEngine" additivity="false" level="TRACE">
        <appender-ref ref="ASYNC_NSVEngine" />
    </logger>

    <logger name="com.baxter.genius.blotter.JQuotedOutrightMiniPricePanelX2" additivity="false" level="TRACE">
        <appender-ref ref="ASYNC_NSVEngine" />
    </logger>

</configuration>
