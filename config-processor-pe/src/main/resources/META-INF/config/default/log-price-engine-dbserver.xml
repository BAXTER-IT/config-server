<?xml version="1.0" encoding="UTF-8"?>
<configuration xmlns="http://baxter-it.com/config/log">

    <logger name="ROOT" level="WARN">
        <appender-ref ref="CONSOLE" />
    </logger>

    <logger name="com.baxter.pe" level="DEBUG">
        <appender-ref ref="DBSERVER_FILE" />
    </logger>

    <console-appender name="CONSOLE">
        <layout>%d{HH:mm:ss.SSS} [%thread] %-5level %c - %msg%n</layout>
    </console-appender>

    <rolling-file-appender name="DBSERVER_FILE" file="dbserver.log" maxSize="5MB" backupIndex="10">
        <layout>%d{HH:mm:ss.SSS} [%thread] %-5level - %msg%n</layout>
    </rolling-file-appender>

</configuration>
