<?xml version="1.0" encoding="UTF-8"?>
<configuration xmlns="http://baxter-it.com/config/log">

    <console-appender name="CONSOLE">
        <layout>Validator${VS.cpCode} %c{1} [%d{ISO8601}] %m%n</layout>
    </console-appender>
   
    <rolling-file-appender name="FILE_Validator" file="${VS.name}Validator${VS.cpCode}.log" maxSize="5MB" backupIndex="10">
        <layout>Validator${VS.cpCode}[%d{ISO8601}][%p] - %m%n</layout>
    </rolling-file-appender>

    <logger name="com.baxter" additivity="false" level="TRACE">
        <appender-ref ref="FILE_Validator" />
    </logger>

    <logger name="ROOT" level="TRACE">
	<appender-ref ref="CONSOLE" />
    </logger>
    
</configuration>
